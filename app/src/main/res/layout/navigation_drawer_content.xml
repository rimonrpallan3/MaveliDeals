<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/navigationDrawerBackgroundColor"
    android:id="@+id/frag_nav_drawer">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:id="@+id/containerImages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



      <android.support.v7.widget.RecyclerView
            android:paddingTop="0dp"
            android:id="@+id/drawerLayout"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="@dimen/_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10"
            android:layout_marginRight="@dimen/_10"
            android:layout_marginLeft="@dimen/_18"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10"
                android:src="@drawable/ic_account_grey600_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Account"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10"
            android:layout_marginRight="@dimen/_10"
            android:layout_marginLeft="@dimen/_18"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10"
                android:src="@drawable/ic_account_grey600_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Order"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10"
            android:layout_marginRight="@dimen/_10"
            android:layout_marginLeft="@dimen/_18"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10"
                android:src="@drawable/ic_account_grey600_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Logout"/>


        </LinearLayout>





        </LinearLayout>




</RelativeLayout>
